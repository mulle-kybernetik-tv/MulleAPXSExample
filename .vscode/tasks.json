{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "make",
         "type": "shell",
         "command": "make",
         "options": {
            "cwd": "${workspaceRoot}/src"
         },
         "group": {
            "kind": "build",
            "isDefault": true
         },         
         "problemMatcher": [
            "$gcc"
         ]
      },
      {
         "label": "clean",
         "type": "shell",
         "command": "make clean",
         "options": {
            "cwd": "${workspaceRoot}/src"
         },
         "problemMatcher": [
            "$gcc"
         ]
      }
   ]
}